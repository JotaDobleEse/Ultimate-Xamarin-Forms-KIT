<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="DemoXF.RadarChartPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:ultimateChart="clr-namespace:UltimateXF.Widget.Charts;assembly=UltimateXF"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="10" Spacing="20">
            <ultimateChart:SupportRadarChart x:Name="radarChart"
                                              Description="Radar Chart 1"
                                              HorizontalOptions="FillAndExpand"
                                              VerticalOptions="FillAndExpand"
                                              IsShowLeftAxis="false"
                                              IsShowLeftAxisLine="false"
                                              IsShowLeftAxisValue="false"
                                              IsShowRightAxis="false"
                                              IsShowRightAxisLine="false"
                                              IsShowRightAxisValue="false"
                                              IsShowXAxis="false"
                                              IsShowXAxisLine="false"
                                              XAxisPosition="BOTTOM"
                                              IsShowXAxisValue="true" />
            
            <ultimateChart:SupportRadarChart x:Name="radarChart2"
                                              Description="Radar Chart 2"
                                              XAxisPosition="BOTTOM"
                                              HorizontalOptions="FillAndExpand"
                                              VerticalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
